{
    "name": "fill-pr-description",
    "version": "1.0.0",
    "description": "A CLI tool to auto-fill PR descriptions based on git diff and guidelines",
    "main": "dist/index.js",
    "bin": {
        "fill-pr": "./dist/index.js"
    },
    "scripts": {
        "build": "npm run type-check && node esbuild.config.js",
        "start": "node dist/index.js",
        "dev": "npm run type-check && node esbuild.config.js && node dist/index.js",
        "type-check": "tsc --noEmit",
        "lint": "biome check --write ./",
        "format": "biome check --fix --unsafe ./",
        "test": "vitest",
        "test:watch": "vitest --watch"
    },
    "keywords": ["cli", "git", "github", "pr", "description", "chatgpt"],
    "author": "Oleg Petrov <fyvfyv@fyvfyv.com>",
    "license": "ISC",
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/node": "^22.7.6",
        "esbuild": "^0.24.0",
        "typescript": "^5.6.3",
        "vitest": "^2.1.3"
    },
    "dependencies": {
        "@octokit/rest": "^21.0.2",
        "@types/common-tags": "^1.8.4",
        "chalk": "^5.3.0",
        "common-tags": "^1.8.2",
        "dotenv": "^16.4.5",
        "readline": "^1.3.0",
        "simple-git": "^3.27.0"
    },
    "packageManager": "pnpm@9.8.0+sha256.56a9e76b51796ca7f73b85e44cf83712862091f4d498c0ce4d5b7ecdc6ba18f7"
}
